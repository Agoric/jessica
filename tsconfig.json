{
    "compilerOptions": {
        "target": "esnext",
        "module": "es6",
        "typeRoots": ["./typings"],
        "noImplicitAny": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "types": ["./typings/lib.jessie"]
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ]
}
