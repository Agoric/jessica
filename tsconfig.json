{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "target": "esnext",
        "module": "es6",
        "typeRoots": ["./typings", "./node_modules/@types"],
        "noImplicitAny": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "types": ["./typings/lib.jessie", "./node_modules/@michaelfig/slog/slog"]
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ]
}
